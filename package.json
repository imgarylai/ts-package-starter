{
  "name": "ts-package-starter",
  "version": "1.0.2",
  "description": "A modern TypeScript package starter template with best practices",
  "keywords": [
    "typescript",
    "starter",
    "template",
    "package"
  ],
  "homepage": "https://github.com/imgarylai/ts-package-starter#readme",
  "bugs": {
    "url": "https://github.com/imgarylai/ts-package-starter/issues"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/imgarylai/ts-package-starter.git"
  },
  "license": "MIT",
  "author": "Gary Lai <garylai1990@gmail.com>",
  "sideEffects": false,
  "type": "module",
  "exports": {
    "types": "./dist/index.d.ts",
    "import": "./dist/index.mjs",
    "require": "./dist/index.cjs"
  },
  "main": "./dist/index.cjs",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.ts",
  "files": [
    "dist",
    "src"
  ],
  "scripts": {
    "build": "tsup",
    "clean": "rimraf dist coverage",
    "dev": "tsup --watch",
    "predocs": "rimraf docs",
    "docs": "typedoc",
    "docs:watch": "typedoc --watch",
    "lint": "eslint .",
    "prepack": "npm run build",
    "prepare": "husky install",
    "test": "jest",
    "test:coverage": "jest --coverage",
    "type-check": "tsc --noEmit"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,md}": [
      "prettier --write"
    ],
    "package.json": [
      "prettier-package-json --write"
    ]
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "devDependencies": {
    "@eslint/js": "^8.56.0",
    "@semantic-release/changelog": "^6.0.0",
    "@semantic-release/commit-analyzer": "^11.0.0",
    "@semantic-release/git": "^10.0.0",
    "@semantic-release/npm": "^11.0.0",
    "@semantic-release/release-notes-generator": "^12.0.0",
    "@types/jest": "^29.5.12",
    "@types/node": "^20.11.24",
    "@typescript-eslint/eslint-plugin": "^7.0.0",
    "@typescript-eslint/parser": "^7.0.0",
    "cz-conventional-changelog": "3.3.0",
    "eslint": "^8.56.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-jest": "28.11.0",
    "husky": "9.1.7",
    "jest": "^29.7.0",
    "lint-staged": "15.5.1",
    "prettier": "^3.2.5",
    "prettier-package-json": "^2.4.11",
    "rimraf": "^5.0.5",
    "semantic-release": "^22.0.12",
    "sort-package-json": "3.0.0",
    "ts-jest": "^29.1.2",
    "tsup": "^8.0.2",
    "typescript": "5.8.3"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  }
}
