{
  "name": "@imgarylai/ts-package-starter",
  "version": "1.0.0",
  "description": "A modern TypeScript package starter template with best practices",
  "keywords": [
    "typescript",
    "starter",
    "template",
    "package"
  ],
  "homepage": "https://github.com/imgarylai/ts-package-starter#readme",
  "bugs": {
    "url": "https://github.com/imgarylai/ts-package-starter/issues"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/imgarylai/ts-package-starter.git"
  },
  "license": "MIT",
  "author": "Gary Lai <garylai1990@gmail.com>",
  "sideEffects": false,
  "type": "module",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.modern.mjs",
      "require": "./dist/index.cjs"
    }
  },
  "main": "./dist/index.cjs",
  "module": "./dist/index.modern.mjs",
  "types": "./dist/index.d.ts",
  "files": [
    "dist",
    "src"
  ],
  "scripts": {
    "build": "microbundle",
    "clean": "rimraf dist",
    "dev": "microbundle watch",
    "predocs": "rimraf docs",
    "docs": "typedoc",
    "docs:watch": "typedoc --watch",
    "lint": "eslint . --ext .ts",
    "prepack": "npm run build",
    "prepare": "husky install",
    "test": "jest",
    "test:coverage": "jest --coverage",
    "type-check": "tsc --noEmit"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "devDependencies": {
    "@types/jest": "29.5.14",
    "@typescript-eslint/eslint-plugin": "8.29.1",
    "@typescript-eslint/parser": "8.29.1",
    "cz-conventional-changelog": "3.3.0",
    "eslint": "9.24.0",
    "eslint-config-prettier": "10.1.2",
    "eslint-plugin-jest": "28.11.0",
    "husky": "9.1.7",
    "jest": "29.7.0",
    "lint-staged": "15.5.1",
    "microbundle": "0.15.1",
    "prettier": "3.5.3",
    "sort-package-json": "3.0.0",
    "ts-jest": "29.3.1",
    "typedoc": "0.28.2",
    "typescript": "5.8.3"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  }
}
