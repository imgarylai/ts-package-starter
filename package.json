{
  "name": "ts-package-starter",
  "version": "1.1.0",
  "description": "A modern TypeScript package starter template with best practices",
  "keywords": [
    "typescript",
    "starter",
    "template",
    "package"
  ],
  "homepage": "https://github.com/imgarylai/ts-package-starter#readme",
  "bugs": {
    "url": "https://github.com/imgarylai/ts-package-starter/issues"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/imgarylai/ts-package-starter.git"
  },
  "license": "MIT",
  "author": "Gary Lai <garylai1990@gmail.com>",
  "sideEffects": false,
  "type": "module",
  "exports": {
    "types": "./dist/index.d.ts",
    "import": "./dist/index.mjs",
    "require": "./dist/index.cjs"
  },
  "main": "./dist/index.cjs",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.ts",
  "files": [
    "dist",
    "src"
  ],
  "scripts": {
    "build": "tsup",
    "clean": "rimraf dist coverage",
    "dev": "tsup --watch",
    "predocs": "rimraf docs",
    "docs": "typedoc",
    "docs:watch": "typedoc --watch",
    "lint": "eslint .",
    "prepack": "npm run build",
    "prepare": "husky install",
    "test": "jest",
    "test:coverage": "jest --coverage",
    "type-check": "tsc --noEmit"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,md}": [
      "prettier --write"
    ],
    "package.json": [
      "prettier-package-json --write"
    ]
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "devDependencies": {
    "@eslint/js": "^9.0.0",
    "@semantic-release/changelog": "^6.0.0",
    "@semantic-release/commit-analyzer": "^13.0.0",
    "@semantic-release/git": "^10.0.0",
    "@semantic-release/npm": "^12.0.0",
    "@semantic-release/release-notes-generator": "^14.0.0",
    "@types/jest": "^30.0.0",
    "@types/node": "^24.0.0",
    "@typescript-eslint/eslint-plugin": "^8.0.0",
    "@typescript-eslint/parser": "^8.0.0",
    "cz-conventional-changelog": "3.3.0",
    "eslint": "^9.0.0",
    "eslint-config-prettier": "^10.0.0",
    "eslint-plugin-jest": "29.2.2",
    "husky": "9.1.7",
    "jest": "^30.0.0",
    "lint-staged": "16.2.7",
    "prettier": "^3.2.5",
    "prettier-package-json": "^2.4.11",
    "rimraf": "^6.0.0",
    "semantic-release": "^24.0.0",
    "sort-package-json": "3.5.1",
    "ts-jest": "^29.1.2",
    "tsup": "^8.0.2",
    "typedoc": "^0.28.2",
    "typescript": "5.9.3"
  },
  "engines": {
    "node": ">=20.0.0",
    "npm": ">=10.0.0"
  }
}
